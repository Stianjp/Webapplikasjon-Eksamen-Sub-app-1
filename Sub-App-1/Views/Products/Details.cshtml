@model Sub_App_1.Models.Product

<h2>@Model.Name</h2>

<div class="wrapper-box">


    <table class="table table-striped table-bordered">
        <tr>
            <th>Category</th>
            <td>@Model.Category</td>
        </tr>
        <tr>
            <th>Description</th>
            <td>@Model.Description</td>
        </tr>
        <tr>
            <th>Calories</th>
            <td>@Model.Calories kcal</td>
        </tr>
        <tr>
            <th>Protein</th>
            <td>@Model.Protein g</td>
        </tr>
        <tr>
            <th>Fat</th>
            <td>@Model.Fat g</td>
        </tr>
        <tr>
            <th>Carbohydrates</th>
            <td>@Model.Carbohydrates g</td>
        </tr>
    </table>
</div>

@if (User.IsInRole(UserRoles.FoodProducer) && Model.ProducerId == User.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value)
{do
    <div class="btn-group mt-3 d-flex">
        <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model.Id">Edit product</a>
        <a class="btn btn-danger" asp-action="Delete" asp-route-id="@Model.Id" onclick="return confirm('Are you sure you want to delete this product?');">Delete product</a>
    </div>
}

<a href="@Url.Action("Productsindex", "Products")" class="btn btn-secondary mt-3">Back to Products List</a>
