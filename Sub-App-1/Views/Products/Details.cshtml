@model Sub_App_1.Models.Product

<!-- Add custom CSS for this view only -->
<link rel="stylesheet" href="~/css/details.css" />

<h2>@Model.Name</h2>

<div class="wrapper-box">
    <h3>Nutritional info</h3>
    <table class="table table-sm table-responsive">
        <tr>
            <th>Category</th>
            <td>@Model.Category</td>
        </tr>
        <tr>
            <th>Calories</th>
            <td>@Model.Calories kcal</td>
        </tr>
        <tr>
            <th>Protein</th>
            <td>@Model.Protein g</td>
        </tr>
        <tr>
            <th>Fat</th>
            <td>@Model.Fat g</td>
        </tr>
        <tr>
            <th>Carbohydrates</th>
            <td>@Model.Carbohydrates g</td>
        </tr>
    </table>


<div class="wrapper-box2">
    <h3>Product info</h3>
    <p>@Model.Description</p>

    <h4>Allergens</h4>
    <p>This product has these allergens:</p>
    <table class="table table-sm table-responsive">
        <tr>
            <th>Allergens</th>
            <td>
                @if (Model.Allergens != null && Model.Allergens.Any())
                {
                    <ul>
                        @foreach (var allergen in Model.Allergens)
                        {
                            <li>@allergen</li>
                        }
                    </ul>
                }
                else
                {
                    <p>No allergens specified.</p>
                }
            </td>
        </tr>
    </table>
</div>

@if (User.IsInRole(UserRoles.FoodProducer) && Model.ProducerId == User.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value)
{
    <div class="buttons d-flex">
        <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model.Id">Edit product</a>
        <a class="btn btn-danger" asp-action="Delete" asp-route-id="@Model.Id" 
           onclick="return confirm('Are you sure you want to delete this product?');">Delete product</a>
        <a href="@Url.Action("Productsindex", "Products")" class="btn btn-secondary mt-3">Back to Products List</a>
    </div>
}

</div>
