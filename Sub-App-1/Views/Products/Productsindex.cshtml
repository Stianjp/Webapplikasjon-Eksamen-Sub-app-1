@model IEnumerable<Sub_App_1.Models.Product>

@{
    ViewData["Title"] = "Products";
}

 <div class=" justify-content-between">
        <h1>@ViewData["Title"]</h1>
            @if (User.IsInRole(UserRoles.FoodProducer) || User.IsInRole(UserRoles.Administrator)) {
                <a class="btn btn-primary mt-3" asp-action="Create">
                    <img src="~/icons/plus-solid.svg" alt="add new product" class="icon" />
                    Add new product
                </a>
            }
 </div>

 <p class="info mt-3">
    Welcome to the product catalog. This page gives you a comprehensive view of all registered food products in our database. Each product displays essential information including nutritional content (calories, protein, fat, and carbohydrates), categorization, and allergen details. 
    Use the search function to find specific products, or click on any item for detailed information.
</p>


<div class="search-container mt-3">

    
    <div class="search d-flex justify-content-between align-items-center mt-3">
        <input type="text" id="searchInput" class="form-control" placeholder="Search for a product...">
        <button class="btn btn-primary btn-lg">Search</button>
    </div>
<div>

<hr>

<div class="tag-info mt-3">
    <p>The nutritional values below are based on 100 grams of the product</p>
</div>

<div class="mt-3">
    <partial name="_ProductTable" model="@Model"/>
</div>





