@model IEnumerable<Sub_App_1.Models.Product>

@{
    ViewData["Title"] = "Products";
}
<link rel="stylesheet" href="~/css/product.css" asp-append-version="true" />

<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="display-4">@ViewData["Title"]</h1>
        @if (User.IsInRole(UserRoles.FoodProducer)) {
            <a class="btn btn-success btn-lg d-flex align-items-center" asp-action="Create">
                <img src="~/icons/pluss-solid.svg" alt="Add" style="height: 1.5rem; margin-right: 0.5rem;" />
                Add New Product
            </a>
        }
    </div>

    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-6 col-lg-4 mb-4">
                <div class="card shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title">@item.Name</h5>
                        <p class="card-text">
                            <strong>Category:</strong> @item.Category<br>
                            <strong>Description:</strong> @item.Description
                        </p>

                        <div class="d-flex justify-content-between align-items-center">
                            <div class="nutritional-info">
                                <small class="text-muted"><strong>Calories:</strong> @item.Calories kcal</small><br>
                                <small class="text-muted"><strong>Protein:</strong> @item.Protein g</small><br>
                                <small class="text-muted"><strong>Fat:</strong> @item.Fat g</small><br>
                                <small class="text-muted"><strong>Carbs:</strong> @item.Carbohydrates g</small>
                            </div>
                            @if (User.IsInRole(UserRoles.FoodProducer) && item.ProducerId == User.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value)
                            {
                                <div class="btn-group">
                                    <a class="btn btn-sm btn-outline-primary" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                                    <a class="btn btn-sm btn-outline-danger" asp-action="Delete" asp-route-id="@item.Id" onclick="return confirm('Are you sure you want to delete this product?');">Delete</a>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

@section Scripts {
    <!-- This section is for loading any custom JavaScript if needed later -->
}
