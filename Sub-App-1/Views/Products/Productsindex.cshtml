@model IEnumerable<Sub_App_1.Models.Product>


@{
    ViewData["Title"] = "Products";
}
<link rel="stylesheet" href="~/css/product.css" asp-append-version="true" />

    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="display-4">@ViewData["Title"]</h1>
        @if (User.IsInRole(UserRoles.FoodProducer)) {
            <a class="btn btn-success d-flex align-items-center" asp-action="Create">
                <img src="~/icons/plus-solid.svg" style="height: 1.5rem; margin-right: 0.5rem;" />
                Add New Product
            </a>
        }
    </div>

    
     <div class="d-flex justify-content-between align-items-center mb-3">
        <input type="text" id="searchInput" class="form-control" placeholder="Search for a product...">
        <button class="btn btn-primary d-flex">Search</button>
    </div>

<div id="bakgrunns-farger">
    <table class="table rounded-2 table-striped align-items-center">
    <thead>
        <tr>
            <th scope="col">Name</th>
            <th scope="col">Category</th>
            <th scope ="col">Description</th>
            <th scope ="col">Calories (kcal)</th>
            <th scope ="col">Protein (g)</th>
            <th scope ="col">Fat (g)</th>
            <th scope ="col">Carbohydrates (g)</th>
            @if (User.IsInRole(UserRoles.FoodProducer))
            {
                <th scope="col">Actions</th>
            }
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr onclick="window.location.href='@Url.Action("Details", "Products", new { id = item.Id });" style="cursor: pointer;">
                <td>
                    <a asp-controller="Products"
                       asp-action="Details"
                       asp-route-id="@item.Id">@item.Name</a>
                </td>
                <td>@item.Category</td>
                <td>@item.Description</td>
                <td>@item.Calories</td>
                <td>@item.Protein</td>
                <td>@item.Fat</td>
                <td>@item.Carbohydrates</td>
                @if (User.IsInRole(UserRoles.FoodProducer) && item.ProducerId == User.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value)
                {
                    <td>
                        <a class="btn btn-sm btn-outline-primary" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                        <a class="btn btn-sm btn-outline-danger" asp-action="Delete" asp-route-id="@item.Id" onclick="return confirm('Are you sure you want to delete this product?');">Delete</a>
                    </td>
                }
            </tr>
        }
    </tbody>
    </table>

</div>

 <!-- Pagination -->
    <div class="pagination">
        <a href="#">1</a>
        <a href="#">2</a>
        <a href="#">3</a>
        <a href="#">4</a>
        <a href="#">5</a>
    </div>



@section Scripts {
    <!-- This section is for loading any custom JavaScript if needed later -->
}
