@model IEnumerable<Sub_App_1.Models.Product>


@{
    ViewData["Title"] = "Products";
}
<link rel="stylesheet" href="~/css/product.css" asp-append-version="true" />

<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="display-4">@ViewData["Title"]</h1>
        @if (User.IsInRole(UserRoles.FoodProducer)) {
            <a class="btn btn-success btn-lg d-flex align-items-center" asp-action="Create">
                <img src="~/icons/pluss-solid.svg" style="height: 1.5rem; margin-right: 0.5rem;" />
                Add New Product
            </a>
        }
    </div>


    <div class="form-group mb-do3">
        <input type="text" id="searchInput" class="form-control" placeholder="Search products...">
    </div>

    <table class="table table-striped table-bordered shadow-sm rounded-3">
    <thead>
        <tr>
            <th>Name</th>
            <th>Category</th>
            <th>Description</th>
            <th>Calories (kcal)</th>
            <th>Protein (g)</th>
            <th>Fat (g)</th>
            <th>Carbohydrates (g)</th>
            @if (User.IsInRole(UserRoles.FoodProducer))
            {
                <th>Actions</th>
            }
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr onclick="window.location.href='@Url.Action("Details", "Products", new { id = item.Id })';" style="cursor: pointer;">
                <td>
                    <a asp-controller="Products"
                       asp-action="Details"
                       asp-route-id="@item.Id">@item.Name</a>
                </td>
                <td>@item.Category</td>
                <td>@item.Description</td>
                <td>@item.Calories</td>
                <td>@item.Protein</td>
                <td>@item.Fat</td>
                <td>@item.Carbohydrates</td>
                @if (User.IsInRole(UserRoles.FoodProducer) && item.ProducerId == User.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value)
                {
                    <td>
                        <a class="btn btn-sm btn-outline-primary" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                        <a class="btn btn-sm btn-outline-danger" asp-action="Delete" asp-route-id="@item.Id" onclick="return confirm('Are you sure you want to delete this product?');">Delete</a>
                    </td>
                }
            </tr>
        }
    </tbody>
</table>



@section Scripts {
    <!-- This section is for loading any custom JavaScript if needed later -->
}
