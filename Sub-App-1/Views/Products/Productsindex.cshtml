@model IEnumerable<Sub_App_1.Models.Product>

@{
    ViewData["Title"] = "Products";
}

 <div class="d-flex justify-content-between mb-3">
            <h1>@ViewData["Title"]</h1>
            @if (User.IsInRole(UserRoles.FoodProducer) || User.IsInRole(UserRoles.Administrator)) {
                <a class="btn btn-success d-flex align-items-center" asp-action="Create">
                    <img src="~/icons/plus-solid.svg" alt="add new product" class="icon" />
                    Add Product
                </a>
            }
 </div>

<hr>

<div class="search-container">
    <div class="search d-flex justify-content-between align-items-center mb-3">
        <input type="text" id="searchInput" class="form-control" placeholder="Search for a product...">
        <button class="btn btn-success d-flex">Search</button>
    </div>
<div>

<div class="info-text">
    <p>The nutritional values below are based on 100 grams of the product</p>
</div>

<div>
    <partial name="_ProductTable" model="@Model"/>
</div>





