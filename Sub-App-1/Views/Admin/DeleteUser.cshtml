@model Sub_App_1.Models.UserWithRolesViewModel

<h2>Delete User - @Model.Username</h2>
<p>Are you sure you want to delete this user?</p>

<form asp-action="DeleteUserConfirmed" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" name="id" value="@Model.UserId" />
    <div class="form-group">
        <button type="submit" class="btn btn-danger me-2">Delete User</button>
        <a asp-action="UserManager" class="btn btn-secondary">Cancel</a>
    </div>
</form>
