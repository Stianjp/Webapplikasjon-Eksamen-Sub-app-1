<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Sub_App_1</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="~/css/customdesign.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
<header>
    <!-- Sidebar -->
          <div class="sidebar d-flex flex-column flex-shrink-0 p-3 bg-gray-200 text-bg-dark shadow-sm">
            <span class="navbar-brand text-dark">FoodStack</span> <!-- Her kan du legge inn logoen som en <img>-tag -->
            <hr>
            <ul class="nav nav-pills flex-column mb-auto">
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Home" asp-action="Index">
                        <img src="~/icons/gauge-solid.svg"> Dashboard
                    </a>
                </li>
              @if (User.Identity.IsAuthenticated) {
                <!-- Hvis brukeren er logget inn, vis normale knapper -->
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Products" asp-action="Productsindex">
                        <img src="~/icons/bowl-food-solid.svg"> Products
                    </a>
                </li>
                }else{
                    <li class="nav-item">
                        <a class="nav-link disabled" aria-disabled="true">
                            <img src="~/icons/bowl-food-solid.svg"> Products
                        </a>
                    </li>
                }
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Account" asp-action="Index">
                        <img src="~/icons/gear-solid.svg"> Account
                    </a>
                </li>
                @if (User.Identity.IsAuthenticated) {
                    <!-- Hvis brukeren er logget inn, vis normale knapper -->
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Home" asp-action="Privacy">
                            <img src="~/icons/bowl-food-solid.svg"> Privacy
                        </a>
                    </li>
                } else {
                <!-- Hvis brukeren ikke er logget inn, gjør knapper inaktive eller fjern href -->
                <li class="nav-item">
                    <a class="nav-link disabled" aria-disabled="true">
                        <img src="~/icons/bowl-food-solid.svg"> Privacy
                    </a>
                </li>
            }
            </ul>
             
            <!-- Log in button -->
            <hr>
            <div class="logut">
            @if (!User.Identity.IsAuthenticated) {
                <a class="d-flex align-items-center text-dark text-decoration-none">
                    <form asp-controller="Account" asp-action="Index" method="get">
                        <button type="submit" class="btn btn-success">
                            <img src="~/icons/right-to-bracket-solid.svg"/> Logg inn
                        </button>
                    </form>
                </a>
            }else { <!-- Log out button -->
                @if(User.Identity != null && User.Identity.IsAuthenticated) {
                <form asp-action="Logout" method="post">
                    <button type="submit" class="btn btn-danger">Logout</button><!-- Magnus; få denne til å funke, den skal gå tilbake til home view-->
                </form>
                }
            }
            </div>
        </div>
</header>


<!-- Dette er lim felles så her kan det ikke stå -->
<!-- Main content -->
<div class="main-content">
    @RenderBody()
</div>


