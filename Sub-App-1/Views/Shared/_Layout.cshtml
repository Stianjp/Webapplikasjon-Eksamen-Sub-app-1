<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Sub_App_1</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="~/css/customdesign.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    
</head>
<body>
<header>
    <!-- Navbar -->
    <nav class="navbar bg-gray-100 d-flex justify-content-between px-4 shadow-sm">
            <span class="navbar-brand text-bg-dark">FoodStack</span> <!-- Her kan du legge inn logoen som en <img>-tag -->
            <div class="d-flex align-items-center">
                <span class="navbar-text md-3">Bruker:  @User.Identity.Name</span>
                <!-- Fjern img-taggen hvis du ikke trenger profilbildet -->
                <img src="path/to/profile-picture.png" alt="Profile" class="rounded-circle" style="width: 30px; height: 30px;">
            </div>
    </nav>

    <!-- Sidebar -->
    <div class="sidebar mb-auto d-flex flex-column bg-gray-200 px-2 shadow-sm">
        <div class="nav flex-column nav-pills nav-fill ">
            <li class="nav-item ">
                <a class="nav-link active rounded" href="/" aria-current="page"><img src="path/to/house.png" alt="Hjem til Dashboard icon hus">Dashboard</a>
            </li>
            <li class="nav-item ">
                <a class="nav-link" asp-area="" asp-controller="Products" asp-action="Products">Products</a>
            </li>
            <li class="nav-item ">
                <a class="nav-link" asp-area="" asp-controller="Account" asp-action="Index">Account</a>
            </li>
            <li class="nav-item ">
                <a href="/Home/Privacy" class="nav-link"><i class="bi bi-house-door"></i>Privacy</a>
            </li>
         </div>
        <!-- Log out button -->
        <hr>
        <div class="logut">
            <li class="nav-item">
                <button class=" nav-link rounded d-flex btn btn-primary text-decoration-none"><i class="bi bi-house-door"></i>Log out</button>
            </li>
        </div>
    </div>
</header>



<!-- Main content -->
<div class="main-content">
    @if (User.Identity.IsAuthenticated) {
        <h1>Welcome, @User.Identity.Name!</h1>
        <p>You are currently logged in.</p>
    } else {
        <h1>Hello there!</h1>
        <p>You are not currently logged in.</p>
    }
        @RenderBody()
</div>



<!-- Footer -->
<footer class="border-top footer text-muted">
    <!-- Footer content kan legges til her om nødvendig -->
     @* <div class="container">
            &copy; 2024 - Sub_App_1 - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div> *@
</footer>

<!-- Scripts -->
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
@await RenderSectionAsync("Scripts", required: false)
</body>
</html>

