<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Sub_App_1</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Sub_App_1.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <!-- Navbar -->
        <nav class="navbar navbar-light bg-light d-flex justify-content-between px-4 shadow" style="z-index: 1000; width: 100%;">
            <a class="navbar-brand">Logo</a> <!-- Her kan du legge inn logoen som en <img>-tag -->
            <div class="d-flex align-items-center">
                <span class="navbar-text mr-3">Bruker: @User.Identity.Name</span>
                <!-- Fjern img-taggen hvis du ikke trenger profilbildet -->
                <img src="path/to/profile-picture.png" alt="Profile" class="rounded-circle" style="width: 30px; height: 30px;">
            </div>

        </nav>

        <!-- Sidebar -->
        <div id="sidebar" class="d-flex flex-shrink-0 p-3 bg-light nav nav-pills flex-column mb-auto navbar-collapse collapse d-sm-inline-flex justify-content-between" style="width: 250px; height: 100vh; position: fixed;">
            <hr>
            <ul class="navbar-nav flex-grow-1">
                <li class="nav-item">
                    <a href="/" class="nav-link active" aria-current="page">
                        Dashboard
                    </a>
                </li>
                <li>
                    <a href="/Products" class="nav-link link-dark">
                        Products
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-dark" asp-area="" asp-controller="Account" asp-action="Index">Account</a>
                </li>
                <li>
                    <a href="/Home/Privacy" class="nav-link link-dark">
                        Privacy
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-dark" href="https://github.com/Stianjp/Webapplikasjon-Eksamen/tree/main/Sub-App-1" target="_blank">GitHub</a>
                </li>
            </navbar-nav>
            <!-- Log out button -->
            <hr>
            <a href="#" class="d-flex align-items-center text-dark text-decoration-none">
                Log out
            </a>
        </div>
    </header>

    <!-- Main content -->
    <div class="flex-grow-1 p-4" style="margin-left: 250px;">
        @if (User.Identity.IsAuthenticated) {
            <h1>Welcome, @User.Identity.Name!</h1>
            <p>You are currently logged in.</p>
        } else {
            <h1>Hello there!</h1>
            <p>You are not currently logged in.</p>
        }
    </div>





