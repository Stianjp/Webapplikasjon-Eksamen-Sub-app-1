<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Sub_App_1</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="~/css/customdesign.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    
</head>
<body>
<header>
    <!-- Navbar -->
    <nav class="navbar bg-gray-100 d-flex justify-content-between px-4 shadow-sm">
            <span class="navbar-brand text-dark">FoodStack</span> <!-- Her kan du legge inn logoen som en <img>-tag -->
            <div class="d-flex align-items-center">
                <span class="navbar-text md-3">Bruker:  @User.Identity.Name</span>
                <!-- Fjern img-taggen hvis du ikke trenger profilbildet -->
                <img src="~/icons/user-solid.svg" alt="Profile" class="rounded-circle" style="width: 30px; height: 30px;">
            </div>
    </nav>

    <!-- Sidebar -->
    <div class="sidebar d-flex flex-column flex-shrink-0 p-3 bg-gray-200 text-bg-dark shadow-sm">
        <ul class="nav nav-pills flex-column mb-auto">
            <li class="nav-item ">
                <a class="nav-link bg-success text-light active" href="/" aria-current="page">
                    <img src="~/icons/gauge-solid.svg"/> Dashboard </a>
            </li>
            <li class="nav-item ">
                <a class="nav-link" asp-area="" asp-controller="Products" asp-action="Products">
                    <img src="~/icons/bowl-food-solid.svg"/> Products </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" asp-area="" asp-controller="Account" asp-action="Accountindex">
                    <img src="~/icons/gear-solid.svg"/> Account </a>
            </li>
            <li class="nav-item ">
                <a href="/Home/Privacy" class="nav-link">
                <img src="~/icons/bowl-food-solid.svg"/>Privacy</a>
            </li>
         </ul>
        <!-- Log out button -->
        <hr>
        <div class="logut">
            <a href="#" class="d-flex align-items-center text-dark text-decoration-none">
                <img src="~/icons/right-to-bracket-solid.svg"/> Log out</a>
        </div>
    </div>
</header>


<!-- Dette er lim felles så her kan det ikke stå -->
<!-- Main content -->
<div class="main-content">
    @RenderBody()
</div>


